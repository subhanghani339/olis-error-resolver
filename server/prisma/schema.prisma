
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String?

  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt
}

model OLIS_ORU_ResolutionTracker {
  orderId         String
  dateSubmitted   DateTime
  errorCode       String?
  errorMessage    String?
  hl7Segment      String?
  status          String?
  comments        String?
  resolvedBy      String?
  resolvedDate    DateTime?
  
  @@id([orderId, dateSubmitted])
  @@map("OLIS_ORU_ResolutionTracker")
}
